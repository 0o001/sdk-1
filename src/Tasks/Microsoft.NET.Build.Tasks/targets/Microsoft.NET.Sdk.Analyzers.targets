<Project ToolsVersion="14.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup Condition="'$(DisableNetAnalyzers)' != 'true' And '$(_TargetFrameworkVersionWithoutV)' >= '5.0' And '$(Language)'=='C#'">
    <UsingNETAnalyzers>true</UsingNETAnalyzers>
  </PropertyGroup>
  <ItemGroup Condition="'$(DisableNetAnalyzers)' != 'true' And '$(_TargetFrameworkVersionWithoutV)' >= '5.0' And '$(Language)'=='C#'">
    <Analyzer
      Include="$([System.IO.Path]::GetFullPath($(MSBuildThisFileDirectory)..))\analyzers\Microsoft.NetCore.CSharp.Analyzers.dll"
      IsImplicitlyDefined="true" />
    <Analyzer
      Include="$([System.IO.Path]::GetFullPath($(MSBuildThisFileDirectory)..))\analyzers\Microsoft.NetCore.Analyzers.dll"
      IsImplicitlyDefined="true" />
  </ItemGroup>
</Project>
